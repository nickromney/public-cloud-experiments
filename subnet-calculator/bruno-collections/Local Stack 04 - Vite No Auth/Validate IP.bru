meta {
  name: Validate IP
  type: http
  seq: 2
}

post {
  url: {{stack4BaseUrl}}/api/v1/ipv4/validate
  body: json
  auth: none
}

body:json {
  {
    "address": "10.0.0.1"
  }
}

assert {
  res.status: eq 200
}

tests {
  test("should validate IPv4 address", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(200);
    expect(data.valid).to.equal(true);
    expect(data.address).to.equal("10.0.0.1");
  });
}
