meta {
  name: Health Check
  type: http
  seq: 1
}

get {
  url: {{directAzureFunctionUrl}}/api/v1/health
  body: none
  auth: none
}

assert {
  res.status: eq 200
  res.body.status: eq healthy
}

tests {
  test("should return healthy status", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(200);
    expect(data.status).to.equal("healthy");
    expect(data.service).to.include("Azure Function");
  });
}
