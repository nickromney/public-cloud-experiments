meta {
  name: Validate IP
  type: http
  seq: 2
}

post {
  url: {{directContainerAppUrl}}/api/v1/ipv4/validate
  body: json
  auth: none
}

body:json {
  {
    "address": "192.168.1.0/24"
  }
}

assert {
  res.status: eq 200
  res.body.valid: eq true
  res.body.type: eq network
}

tests {
  test("should validate network address", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(200);
    expect(data.valid).to.equal(true);
    expect(data.type).to.equal("network");
    expect(data.address).to.exist;
  });
}
