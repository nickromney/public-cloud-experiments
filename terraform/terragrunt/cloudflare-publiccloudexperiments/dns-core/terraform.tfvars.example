# DNS records managed by this stack.

zone_name = "publiccloudexperiments.net"
zone_id   = "d338fed554857c1081ad974209c5ef23"

records = {
  "@" = {
    type    = "A"
    value   = "203.0.113.10"
    proxied = true
    # ttl is automatically set to 1 (automatic) for proxied records
    comment = "Primary apex record"
  }

  "www" = {
    type    = "CNAME"
    value   = "app.publiccloudexperiments.net"
    proxied = true
  }

  "_sip._tls" = {
    type  = "SRV"
    # SRV record format for Cloudflare: "weight port target" (priority specified separately)
    value    = "1 443 sipdir.online.lync.com"
    priority = 10
    ttl      = 3600
  }
}
