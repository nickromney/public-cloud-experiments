# ============================================================================
# Example 2: Just Functions (no APIM, no SWA)
# ============================================================================

storage_accounts = {
  "funcapp" = {
    account_tier       = "Standard"
    replication_type   = "LRS"
    purpose            = "function-app-storage"
  }
}

app_service_plans = {
  "consumption" = {
    os_type  = "Linux"
    sku_name = "Y1"
  }
}

function_apps = {
  "api" = {
    app_service_plan_key = "consumption"
    storage_account_key  = "funcapp"
    runtime              = "dotnet-isolated"
    runtime_version      = "8.0"
    app_settings = {}
  }
}

# Disabled (empty maps):
static_web_apps = {}
apim_instances = {}
apim_apis = {}

